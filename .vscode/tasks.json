{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build C++ Project",
			"type": "shell",
			"command": "g++",
			"args": [
				"-g",
				"\"${workspaceFolder}/src/*.cpp\"",
				"-I",
				"\"${workspaceFolder}/include\"",
				"-o",
				"\"${workspaceFolder}/build/main.exe\""
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"]
		}
	]
}


