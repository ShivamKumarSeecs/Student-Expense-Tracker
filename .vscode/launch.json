{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "g++",
			"args": [
				"-g",
				"${workspaceFolder}/src/main.cpp",
				"-I",
				"${workspaceFolder}/include",
				"-o",
				"${workspaceFolder}/build/Debug/ExpenseTracker.exe"
			],
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},

		{
			"label": "Run",
			"type": "shell",
			"command": "cmd.exe",
			"args": [
				"/c",
				"start",
				"ExpenseTracker",
				"\"${workspaceFolder}\\build\\Debug\\ExpenseTracker.exe\""
			],
			"dependsOn": "Build",
			"group": "none"
		}
	]
}

